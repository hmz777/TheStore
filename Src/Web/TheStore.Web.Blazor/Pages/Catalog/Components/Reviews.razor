@using TheStore.Web.Blazor.Helpers;

@for (int i = 0; i < 5; i++)
{
	var index = i;

	<Review @key="@($"review-{index}")"
			Title="@DummyDataHelper.GenerateRandomSmallString()"
			Rating="@DummyDataHelper.GenerateRandomNumber(5)"
			Date="DateTimeOffset.UtcNow"
			User="@($"User {index}")"
			Content="@DummyDataHelper.GenerateRandomString()" />
}

